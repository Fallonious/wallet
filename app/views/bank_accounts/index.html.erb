<p id="notice"><%= notice %></p>

<h1>List of Transactions</h1>

<table>
  <thead>
    <tr>
      <th>Transaction on</th>
      <th>Item description</th>
      <th>Transaction amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bank_accounts.each do |bank_account| %>
      <tr>
        <td><%= bank_account.transaction_on %></td>
        <td><%= bank_account.item_description %></td>
        <td><%= bank_account.transaction_amount %></td>
        <td><%= link_to 'Show', bank_account %></td>
        <td><%= link_to 'Edit', edit_bank_account_path(bank_account) %></td>
        <td><%= link_to 'Destroy', bank_account, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Enter New Transaction', new_bank_account_path %>
<div>
<p> You have made <%= @numberoftransactions %> transactions.</p>
<p>Your current balance is: $ <%= @total_amount %>.</p>
<%= @repremand %>
</div>
